  postgresql:
    endpoint: localhost:5432
    transport: tcp
    username: "{{ postgres_user }}"
    password: "{{ postgres_password }}"
    databases:
      - "{{postgres_db}}"
    collection_interval: 10s
    tls:
      insecure: false
      insecure_skip_verify: true
    query_sample_collection:
      enabled: false 
    top_query_collection:
      enabled: true
      top_n_query: 10
    
filelog:
    include: [/var/log/postgresql/*.log, /var/log/auth.log]
    start_at: beginning

